<Window x:Class="SmartDur.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartDur"
        mc:Ignorable="d"
        Title="Register SmartDur" Height="450" Width="800">
    <Grid>
        <Label Content="Register Account" Margin="226,65,0,0" VerticalAlignment="Top" FontSize="48" HorizontalAlignment="Left"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="262,0,0,0" VerticalAlignment="Center" Foreground="Black"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="262,250,0,0" VerticalAlignment="Top" Foreground="Black"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="350,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
        <PasswordBox x:Name="pbPassword" HorizontalAlignment="Left" Margin="350,254,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnRegister" Content="Register" HorizontalAlignment="Center" Margin="0,294,0,0" VerticalAlignment="Top" Padding="5,1,5,1" Click="btnRegister_Click"/>


    </Grid>
</Window>
