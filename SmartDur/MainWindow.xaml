<Window x:Class="SmartDur.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartDur"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Center" Margin="0,52,0,0" TextWrapping="Wrap" Text="SmartDur" VerticalAlignment="Top" Width="228" TextChanged="TextBox_TextChanged" FontSize="48"/>
        <TextBox HorizontalAlignment="Left" Margin="346,0,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Center" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="346,240,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="120"/>
        <Button Content="SignIn" HorizontalAlignment="Center" Margin="0,284,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
